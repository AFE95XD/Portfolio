---
import { Image } from "astro:assets";
import IconAstro from "../svg/IconAstro.astro";
import IconCss from "../svg/IconCss.astro";
import IconGit from "../svg/IconGit.astro";
import IconHtml from "../svg/IconHtml.astro";
import IconJavascript from "../svg/IconJavascript.astro";
import IconMongoDB from "../svg/IconMongodb.astro";
import IconNext from "../svg/IconNext.astro";
import IconNode from "../svg/IconNodejs.astro";
import IconReact from "../svg/IconReact.astro";
import IconTailwind from "../svg/IconTailwind.astro";
import IconTypescript from "../svg/IconTypescript.astro";
import { Fragment } from "astro/jsx-runtime";

interface Props {
  // imagen: string,
  proyectoInfo: object;
}

const iconosDev = {
  html: IconHtml,
  css: IconCss,
  tailwind: IconTailwind,
  javascript: IconJavascript,
  typescript: IconTypescript,
  git: IconGit,
  react: IconReact,
  next: IconNext,
  astro: IconAstro,
  node: IconNode,
  mongoDB: IconMongoDB,
};

const { proyectoInfo } = Astro.props;
const { imagen, titulo, descripcion, tecnologias, infoProyecto } = proyectoInfo;
// console.log(imagen);
// console.log(tecnologias);
// console.log(infoProyecto);
// console.log(imagen);
---

<div class="card">
  <div class="contenedor-imagen">
    <Image src={imagen} alt=`sitio_${imagen}` />
  </div>
  <div class="info-card">
    <h2 class="font-bold text-xl mb-2">{titulo}</h2>
    <p class="text-gray-700 text-base">
      {descripcion}
    </p>
  </div>
  <div class="tecnologias">
    {
      tecnologias.map((Icono) => {
        const IconComponent = iconosDev[Icono];
        if (IconComponent) {
          return (
            <div class="icon">
              <IconComponent />
            </div>
          );
        }
        return null;
      })
    }
  </div>
  <div class="referencias">
    <a href={infoProyecto.git} target="_blank">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
        >
        </path>
      </svg>
    </a>
    <a href={infoProyecto.sitio} target="_blank">
      <svg viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M228 104a12 12 0 0 1-24 0V69l-59.51 59.51a12 12 0 0 1-17-17L187 52h-35a12 12 0 0 1 0-24h64a12 12 0 0 1 12 12Zm-44 24a12 12 0 0 0-12 12v64H52V84h64a12 12 0 0 0 0-24H48a20 20 0 0 0-20 20v128a20 20 0 0 0 20 20h128a20 20 0 0 0 20-20v-68a12 12 0 0 0-12-12Z"
        ></path>
      </svg>
    </a>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    width: 360px;
    background-color: var(--text-theme);
    color: var(--bg-theme);
    border-radius: 9px;
  }

  .contenedor-imagen {
    width: 100%;
    height: 100%;
    border-top-right-radius: 9px;
    border-top-left-radius: 9px;
    overflow: hidden;

    & > img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }

  .info-card {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    padding-top: 1rem;
    padding-bottom: 1rem;
    font-family: var(--font-josefin);
    color: var(--bg-theme);

    & > h2 {
      margin-bottom: 0.5rem;
    }
  }

  .tecnologias {
    display: flex;
    column-gap: 0.5rem;
    flex-wrap: wrap;
    width: 100%;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .icon {
    width: 25px;
    height: 25px;

    & > svg {
      width: 100%;
      height: 100%;
    }
  }

  .referencias {
    display: flex;
    text-align: center;
    padding: 1rem 1.5rem;

    & > a {
      flex-grow: 1;
      text-decoration: none;

      & > svg {
        width: 25px;
        height: 25px;
        fill: var(--bg-theme);
      }
    }
  }
</style>
