---
import Toggle from "../components/ui/Toggle.astro";
---

<header id="Inicio">
  <div class="container">
    <p>afe</p>
    <nav class="ocultar">
      <a href="#Inicio">Inicio</a>
      <a href="#Experiencia">Experiencia</a>
      <a href="#Habilidades">Habilidades</a>
      <a href="#Proyectos">Proyectos</a>
    </nav>
    <div class="menu-hambuergesa" id="menu-hamburgesa">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-align-center"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M4 6l16 0"></path>
        <path d="M8 12l8 0"></path>
        <path d="M6 18l12 0"></path>
      </svg>
    </div>
    <div>
      <Toggle />
    </div>
  </div>

  <!-- menu responsive -->
  <nav class="menu-responsive">
    <a href="#">Inicio</a>
    <a href="#">Experiencia</a>
    <a href="#">Habilidades</a>
    <a href="#">Proyectos</a>
  </nav>
</header>

<script>
  const menuHamburgesa = document.getElementById("menu-hamburgesa");
  const menuResponsive = document.querySelector(".menu-responsive");
  menuHamburgesa.addEventListener("click", () => {
    menuResponsive.classList.toggle("mostrar");
  });
</script>

<style>
  header {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 15px;
    position: sticky;
  }

  .container {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    color: var(--bg-theme);
    background-color: var(--text-theme);
    /* min-width: 46rem; */
    min-width: 736px;
    /* min-width: 50%; */
    border-radius: 9999px;
    padding: 1rem 0;
  }

  .menu-hambuergesa,
  .menu-responsive {
    display: none;
  }

  p {
    position: relative;
    font-family: var(--font-pacifico);
    text-transform: uppercase;
    letter-spacing: 5px;
    font-size: 1.75rem;
  }

  p:hover::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 4px;
    border-radius: 4px;
    background-color: #375a7f;
    bottom: 0;
    left: 0;
  }

  nav {
    display: flex;
    gap: 1rem;
  }

  a {
    position: relative;
    color: inherit;
    text-decoration: none;
    font-family: var(--font-josefin);
    padding: 0.75rem 0.75rem;
    border-radius: 1rem;
    font-size: 1.125rem;
  }

  a::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 4px;
    border-radius: 4px;
    background-color: #375a7f;
    bottom: 0;
    left: 0;
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out;
  }

  a:hover::before {
    transform-origin: left;
    transform: scaleX(1);
  }

  @media (width <= 768px) {
    header {
      flex-direction: column;
      row-gap: 0.2rem;
    }

    .container {
      min-width: 85%;
      justify-content: space-between;
      padding: 1rem 2rem;
    }

    .menu-hambuergesa {
      display: block;
    }

    .ocultar {
      display: none;
    }

    .mostrar {
      display: flex;
    }

    .menu-responsive {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-width: 85%;
      color: var(--bg-theme);
      background-color: var(--text-theme);
      gap: 0;
      border-radius: 35px;

      & a {
        width: 100%;
        text-align: center;
      }

      & a::before {
        all: unset;
      }

      & a:hover::before {
        all: unset;
      }
    }
  }
</style>
